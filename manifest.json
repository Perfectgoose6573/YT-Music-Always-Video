{
  "name": "YT Music Always Video",
  "version": "1.1.1",
  "manifest_version": 3,
  "description": "Automatically enables Video mode on YouTube Music.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://music.youtube.com/*"],

"icons": {
  "16": "icon.png",
  "48": "icon.png",
  "128": "icon.png"
},

"action": {
  "default_icon": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "default_title": "YT Music Always Video",
  "default_popup": "popup.html"
},

  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
