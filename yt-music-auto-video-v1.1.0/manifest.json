{
  "name": "YT Music Auto Video",
  "version": "1.1.0",
  "manifest_version": 3,
  "description": "Automatically enables Video mode on YouTube Music when available.",
  "permissions": ["storage"],
  "host_permissions": ["https://music.youtube.com/*"],
  "action": {
    "default_title": "YT Music Auto Video",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
